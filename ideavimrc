set clipboard+=unnamed
set surround
set commentary
set highlightedyank
set argtextobj
set textobj-entire
set ReplaceWithRegister
set exchange
set ideajoin

set incsearch
set hlsearch
set smartcase

set easymotion

let mapleader = " "
nnoremap <c-o> :action Back<cr>
nnoremap <c-i> :action Forward<cr>
nnoremap <leader>cr :action RenameElement<cr>

nnoremap <leader>ft :action SelectInProjectView<cr>
nnoremap <leader>]d :action GotoNextError<cr>
nnoremap <leader>[d :action GotoPrevError<cr>
nnoremap <leader>dd :action ShowErrorDescription<cr>
nnoremap <leader>ff :action SearchEverywhere<cr>

nmap s <Plug>(easymotion-s)

" Reformat the current line only
nnoremap <leader>cf :action ReformatCode<cr>

nnoremap <leader>cs :action FileStructurePopup<cr>
nnoremap <leader>ca :action ShowIntentionActions<cr>

inoremap <leader>jj <ESC>
